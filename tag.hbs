{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! If we have a tag cover, display that - else blog cover - else nothing }}
<header class="main-header tag-head {{#if tag.feature_image}}"
	style="background-image: url({{tag.feature_image}}){{else}}{{#if @blog.cover_image}}"
	style="background-image: url({{@blog.cover_image}}){{else}}no-cover{{/if}}{{/if}}">
	{{navigation}}
	<div class="vertical">
		<div class="main-header-content inner">
			<h1 class="page-title">{{tag.name}}</h1>
			<h2 class="page-description">
				{{#if tag.description}}
				{{tag.description}}
				{{else}}
				{{pagination.total}}-post collection
				{{/if}}
			</h2>
		</div>
	</div>
</header>
<div class="main-content inner">
	{{! The main content area on the homepage }}
	<main class="content" role="main">

		{{! The tag below includes the post loop - partials/loop.hbs }}
		{{> "loop"}}

	</main>{{> aside}}
</div>